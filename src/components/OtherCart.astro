---
import Close from '../svg/icons/close.svg'
---


    <div id="cartContainer" class=" z-10 p-space-24-32 bg-lightgrey md:col-start-2 col-start-1 col-span-full w-full 
    border-b-[1px] border-mediumgrey md:border-l-[1px] md:border-mediumgrey">
        <div class="flex justify-between flex-col h-full">

            <div>
                <div class="flex justify-end pb-space-8-16 ">
                    <img class="cursor-pointer" id="close" src={Close} alt="close">
                </div>
                <h3 class="pb-space-32-48">Your Cart</h3>
    
                
            
                </div>
            </div>
            
        </div>
    </div>


    <style>
        .cartOverlay{
            right: -50%;
            transition: right 1s ease-in-out;
        }
        
        .cartOverlay.open {
          right: 0;
        }
        .cartContainer{
            z-index: 800 !important;
        }
        
        @media screen and (max-width: 768px) {
          .cartOverlay{
            right: auto;
            transition: top 1s ease-in-out;
            top: -100%;
        }
        
            .cartOverlay.open {
            top: 0;
        }
        }
        </style>
        
        <script is:inline>
            //CART OVERLAY FUNCTION
        document.addEventListener('DOMContentLoaded', function() {
          var cartBtn1 = document.getElementById('cartMobile');
          var cartBtn2 = document.getElementById('cartDesktop');
          var overlay = document.getElementById('cartOverlay');
          var closeBtn = document.getElementById('close');
          var openBtn = document.getElementById('add');
        
        
          cartBtn1.addEventListener('click', function() {
            overlay.classList.add('open');
        
          });
        
          cartBtn2.addEventListener('click', function() {
            overlay.classList.add('open');
          });
        
          closeBtn.addEventListener('click', function() {
            overlay.classList.remove('open');
          });
        
          openBtn.addEventListener('click', function() {
            overlay.classList.add('open');
            document.getElementById("item").classList.remove("hide");
            document.getElementById("item2").classList.remove("hide");
          });
        });
        </script>
        