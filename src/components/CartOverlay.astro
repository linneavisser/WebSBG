---
import Close from '../svg/icons/close.svg'
import Placeholder from '../img/landing/dress-brown.webp'
---


    <div id="cartContainer" class=" z-10 p-space-24-32 bg-lightgrey md:col-start-2 col-start-1 col-span-full w-full 
    border-b-[1px] border-mediumgrey md:border-l-[1px] md:border-mediumgrey">
        <div class="flex justify-between flex-col h-full">

            <div>
                <div class="flex justify-end pb-space-8-16 ">
                    <img class="cursor-pointer" id="close" src={Close} alt="close">
                </div>
                <h3 class="pb-space-32-48">Your Cart</h3>
    
                <div class="grid grid-cols-cart border-b-[1px] border-mediumgrey pb-space-16-24">
                    <div class="imgcontainer md:px-space-8-16 px-space-32-48">
                        <img class="cartImage" src="" alt="dress">
                    </div>
                    <div class="info flex flex-col justify-between">
                        <div>
                            <p class="accentBody titleText"></p>
                            <p class="accentSmallBody"><span class="cartPrice"></span> DKK</p>
                        </div>
                        <div>
                            <p class="dates overlinep ">21/7 - 24/7 (3 Days)</p>
                        </div>
                        <button class="remove underline accentSmallBody flex justify-end">
                            Remove item
                        </button>
                    </div>
                </div>
            </div>

            <div class="pt-space-16-24 border-t-[1px] border-mediumgrey flex flex-col justify-between gap-space-32-48">
                <div class="flex justify-between">
                    <p>Subtotal</p>
                    <p><span class="cartTotal"></span> DKK</p>
                </div> 
                <div class=" m-auto flex justify-center bg-black text-white py-padding-button-y px-padding-button-x hover:bg-colorhover"> <a class="button" href="/checkout/"> Checkout</a> </div>
            </div>
            
        </div>
    </div>


